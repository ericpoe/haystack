# See http://EditorConfig.org for more information

# top-most EditorConfig file
root = true

# Every File
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
tab_width = 4
indent_size = tab

[*.{yml,json,md,neon}]
tab_width = 2

[*.md]
trim_trailing_whitespace = false
